/* pages/comment/comment.wxss */
.body {
  padding-bottom: 50px;
}

.body .top {
  background-color: #aa9bedd5;
  width: 100%;  
  height: 60px;
  position: relative;
}

.body .top .back {
  position: absolute;
  width: 20px;
  height: 20px;
  bottom: 10px;
  left: 10px;
}

.body .top .topTitle {
  color: #ffffff;
  display: inline-block;
  width: 70px;
  text-align: center;
  position: absolute;
  bottom: 10px;
  left: 50%;
  margin-left: -35px;
}

.body .commentBody .introduction {
  display: block;
  padding: 10px 20px;
  border: 2px solid #997CA2;
  box-shadow: 1px 1px 2px 2px #aa9bedd5;
  margin: 20px;
}

.body .commentBody .inputInf {
  padding:10px 20px;
}

.commentBody .inputInf .inf {
  padding-bottom: 15px;
  margin-bottom: 20px;
  border-bottom: 2px dashed #aa9bedd5;
}

.commentBody .inputInf .star {
  color: red;
  margin-right: 0.5em;
}

.commentBody .inputInf .email {
  margin-left: 1em;
}

.commentBody .inputInf .inputBox {
  margin-top: 10px;
  margin-left: 1em;
  background-color: #aa9bed81;
  height: 30px;
  width: 235px;
  border-radius: 10px;
  padding: 0px 10px;
}

.commentBody .inputInf .comment {
  margin-top: 10px;
  margin-left: 1em;
  background-color: #aa9bed81;
  border-radius: 10px;
  padding: 10px;
  width: 235px;
}

.commentBody .submit {
  background-color: #c9afde;
  color: white;
  letter-spacing: 5rpx;
  border-radius: 10px;
  width: 100px;
  box-shadow: 5px 5px 5px 0px #c383ff;
  margin-top: 20px;
}
