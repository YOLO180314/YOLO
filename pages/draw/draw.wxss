/* pages/draw/draw.wxss */
image {
  position: absolute;
  left: 0;
  bottom: 0;
  display: block;
  width: 100%;
  height: 100%;
  z-index: -999;
}

.title {
  margin-left: 8px; /* 为了给返回按钮留出空间，调整标题的位置 */
  font-size: 16px; /* 标题文字的大小 */
  color:white; /* 标题文字的颜色 */
  margin-top: 40px;
  font-weight: middle; /* 标题文字的粗细 */
  flex: 1; /* 使标题居中显示 */
  text-align: center; /* 使标题文本居中对齐 */
}
.back-icon{
  margin-top: -22px;
}



.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 50px;
  background-color: white;
  border-top-left-radius: 20px;
  border-top-right-radius: 20px;
  display: flex;
  flex-direction: row;
  align-items: center;
  box-sizing: border-box;
  justify-content: space-between; /* 使内容均匀分布 */
  padding: 0 10px; /* 可根据需要调整内边距 */
}



.submit-icon {
  width: 20px; 
  height: 20px; 
  top:13px;
  margin-left: 695rpx; 
}
.speak-icon{
  width: 28px;
  height: 28px; 
  top:12px;
  margin-right: 10px;
}
.text-input {
  flex: 1; /* 使输入框占据剩余空间 */
  margin: 20px 30px;
  padding: 7px; 
  border: 1px solid #ccc; 
  border-radius: 5px; 
}

.container {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top:18px;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}



.swiper-container {
  width: 100%;
  height: 390px; 
}


.image-wrapper {
  position: relative;
  width: 100%;
  height: 100%;
}


.swiper-image {
  width: 80%;
  height: 90%;
  margin-left:30px;
  position: relative;
  z-index: 1; 
}


.time-text {
  position: absolute;
  margin-top: 20px; 
  left: 40px; 
  color:rgb(100, 27, 100); 
  padding: 5px 10px; 
  border-radius: 5px; 
  font-size: 18px; 
  z-index: 88; 
}

.upper-image {
  width: 60%;
  height: 60%;
  z-index:999;
  position: absolute;
  top: 20%;
  left: 15%;
  z-index: 2; /* 确保 upper-image 在 swiper-image 上方 */
}


