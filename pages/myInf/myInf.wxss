/* pages/myInf/myInf.wxss */
.body {
  width: 100vw;
  height: 100vh;
  background-color: #fff;
}

.body .top {
  background-color: #aa9bedd5;
  width: 100%;  
  height: 60px;
  position: relative;
}

.body .top .back {
  position: absolute;
  width: 20px;
  height: 20px;
  bottom: 10px;
  left: 10px;
}

.body .top .topTitle {
  color: #ffffff;
  display: inline-block;
  width: 70px;
  text-align: center;
  position: absolute;
  bottom: 10px;
  left: 50%;
  margin-left: -35px;
}

.inf {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 40rpx;
}

.inf .inf-item {
  display: flex;
  justify-content: space-between;
  /* 实现一左一右 */
  width: 85%;
  align-items: center;
  height: 170rpx;
  border-bottom: 1px solid #aa9bed8f;
}

.inf-item .inf-buttom {
  width: 135rpx !important;
  height: 135rpx;
  margin: 0rpx !important;
  padding: 0rpx;
  background-color: #fff;
}

.inf-item .inf-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 6rpx solid #aa9bedd5;
}
.inf-item .inf-name{
  border: 4rpx solid #c3c3c3;
  padding: 10rpx 5rpx;
  width: 365rpx;
  margin-right: 10rpx;

}

.phone-num {
  display: flex;
  align-items: center;
}

.phone-num .text-input {
  border: 4rpx solid #c3c3c3;
  padding: 10rpx 5rpx;
  width: 365rpx;
  margin-right: 10rpx;
}

.phone-num .icon .edit-icon {
  width: 40rpx;
  height: 40rpx;
}

.phone-num .input-close {
  position: relative;
}

.phone-num .input-close .close-icon {
  position: absolute;
  width: 35rpx;
  height: 35rpx;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  z-index: 10;
}

.save {
  width: 77% !important;
  background-color: #aa9bedd5;
  color: #fff;
  margin-top: 50rpx;
}

.content {
  margin-right: 25rpx;
  font-size: 15px;
}