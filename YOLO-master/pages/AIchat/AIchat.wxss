/* pages/AIchat/AIchat.wxss */
.body {
  background-image: url('https://pic.imgdb.cn/item/66867babd9c307b7e9c82e58.jpg');
  width: 100%;
  height: 100vh;
  background-size: 100% 100%;
  overflow: hidden;
  position: relative;
}

.body .top {
  width: 100%;  
  height: 60px;
  position: relative;
}

.body .top .topTitle {
  color: #ffffff;
  display: inline-block;
  width: 70px;
  text-align: center;
  position: absolute;
  bottom: 10px;
  left: 50%;
  margin-left: -35px;
}

.body .text1 {
  color: #ffffff;
  display: block;
  background-color: #aa9beda2;
  border: 2px solid #967ffad5;
  box-shadow: 1px 1px 2px 2px #aa9bedd5;
  position: absolute;
  left: 20px;
  top: 100px;
  padding: 10px;
}

.body .talk {
  position: absolute;
  background-color: #aa9beda2;
  border: 2px solid #967ffad5;
  box-shadow: 1px 1px 2px 2px #aa9bedd5;
  color: #ffffff;
  padding: 10px;
  right: 25px;
  top: 260px;
}

.body .talk .text2 {
  display: block;
  margin-bottom: 10px;
}

.body .startChat {
  position: absolute;
  bottom: 70px;
  background-color: #c9afde;
  color: white;
  letter-spacing: 5rpx;
  border-radius: 10px;
  width: 150px;
  box-shadow: 5px 5px 5px 0px #c383ff;
  left: 50%;
  margin-left: -75px;
}
